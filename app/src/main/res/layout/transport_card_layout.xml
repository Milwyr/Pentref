<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
            name="transport"
            type="com.ywca.pentref.models.Transport" />
    </data>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingEnd="@dimen/activity_horizontal_margin"
            android:paddingStart="@dimen/activity_horizontal_margin">

            <TextView
                android:id="@+id/route_number_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:text="@{transport.routeNumber}"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/departure_station_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:text="@{transport.departureStation}"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/destination_station_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:text="@{transport.destinationStation}"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/start_transport_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/destination_station_text_view"
                android:layout_centerHorizontal="true"
                android:text="First bus : 5am"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/last_transport_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_below="@id/destination_station_text_view"
                android:text="Last bus: 11pm"
                android:textColor="@color/black" />
        </RelativeLayout>

    </android.support.v7.widget.CardView>
</layout>