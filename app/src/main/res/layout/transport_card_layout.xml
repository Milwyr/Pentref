<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/transport_card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/activity_horizontal_margin"
    android:layout_marginEnd="@dimen/activity_horizontal_margin"
    android:layout_marginStart="@dimen/activity_horizontal_margin"
    android:layout_marginTop="6dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingEnd="@dimen/activity_horizontal_margin"
        android:paddingStart="@dimen/activity_horizontal_margin">

        <ImageView
            android:id="@+id/transport_type_icon"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="8dp"
            app:srcCompat="@drawable/ic_bus_black_36dp" />

        <TextView
            android:id="@+id/route_number_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="6dp"
            android:layout_marginTop="4dp"
            android:layout_toEndOf="@id/transport_type_icon"
            android:text="Medium Text"
            android:textColor="@color/black"
            android:textSize="25sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/next_transport_time_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@id/route_number_text_view"
            android:text="18:00"
            android:textColor="@color/black"
            android:textSize="25sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/departure_station_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@id/route_number_text_view"
            android:layout_below="@id/route_number_text_view"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="6dp"
            android:layout_toStartOf="@+id/second_next_transport_time_text_view"
            android:text="Medium Text"
            android:textColor="@color/grey700"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/second_next_transport_time_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@id/departure_station_text_view"
            android:text="@string/next_transport"
            android:textColor="@color/grey700"
            android:textSize="16sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/to"
            app:srcCompat="@drawable/ic_arrow_downward_grey"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_alignStart="@id/route_number_text_view"
            android:layout_below="@id/departure_station_text_view"
            android:layout_marginTop="3dp" />

        <TextView
            android:id="@+id/destination_station_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@id/route_number_text_view"
            android:layout_below="@id/to"
            android:layout_marginTop="3dp"
            android:text="Medium Text"
            android:textColor="@color/grey700"
            android:textSize="16sp"
            android:textStyle="bold" />

    </RelativeLayout>

</android.support.v7.widget.CardView>